@import '../styles/brand.css';
:root {
  /* surfaces (R G B) */
  --bg: 14 20 35;          /* page background */
  --surface: 20 28 45;     /* panels / cards */
  --surface-2: 27 36 58;   /* deeper panels */
  /* foreground */
  --fg: 226 232 240;       /* primary text */
  --fg-muted: 148 163 184; /* secondary text */
  /* accents */
  --accent: 99 102 241;    /* indigo-500 */
  --accent-2: 59 130 246;  /* blue-500 */
  /* borders (use as rgb(var(--border))) */
  --border: 255 255 255 / 0.06;
}


@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  height: 100%;
}
body {
  background-color: rgb(var(--bg));
  color: rgb(var(--fg));
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.edge-fade{
  mask-image: radial-gradient(180% 140% at 50% 50%, #000 62%, transparent 86%);
}
.edge-fade-strong{
  mask-image: radial-gradient(170% 130% at 50% 50%, #000 55%, transparent 78%);
}

/* Section spacing utilities */
.section{ @apply container py-16 md:py-24; }
.section-tight{ @apply container py-12 md:py-16; }
.section-bleed{ @apply py-20 md:py-32; }
.section-bleed > .container{ @apply px-4 md:px-6; }

.prose :where(img):not(:where(.not-prose *)) { @apply rounded-xl; }
